<?xml version="1.0" encoding="utf-8"?>
<!--main parent-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3fadc">

<!--widgets-->
    <ImageButton
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        app:srcCompat="@drawable/bars_staggered" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/upang_eats_logo" />

    <ImageButton
        android:id="@+id/notification_bell"
        android:layout_width="37dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="16.5dp"
        android:layout_marginEnd="24dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/bell" />

    <ImageButton
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-black"
        android:text="Categories"
        android:textColor="#32620e"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/search"
        android:layout_width="18dp"
        android:layout_height="17.5dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="71.5dp"
        android:scaleType="fitCenter"
        android:background="@null"
        app:srcCompat="@drawable/loupe" />

<!--LinearLayout for categories-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal">

<!--card-view for burger-->
        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="165dp"
            app:cardCornerRadius="5dp">

            <ImageButton
                android:id="@+id/burger"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/burger" />

        </androidx.cardview.widget.CardView>

<!--card-view for noodles-->
        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="165dp"
            app:cardCornerRadius="5dp">

            <ImageButton
                android:id="@+id/noodles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/noodles_png_image_sqaure" />

        </androidx.cardview.widget.CardView>

<!--card-view for buko juice-->
        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="165dp"
            app:cardCornerRadius="5dp">

            <ImageButton
                android:id="@+id/bokojos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bokojos" />

        </androidx.cardview.widget.CardView>

<!--card-view for fries-->
        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="165dp"
            app:cardCornerRadius="5dp">

            <ImageButton
                android:id="@+id/prays"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingBottom="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/prays" />

        </androidx.cardview.widget.CardView>

<!--card-view for turon-->
        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="165dp"
            app:cardCornerRadius="5dp">

            <ImageButton
                android:id="@+id/turon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingTop="5dp"
                android:paddingBottom="8dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/turon" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
<!--end of LinearLayout for categories-->

<!--stalls-->
<!--card-view for stalls-->
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="290dp"
        android:backgroundTint="#d5f4d5"
        app:cardCornerRadius="5dp" >

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp" >


        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="290dp"
        app:cardCornerRadius="5dp" >

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginStart="25dp"
        android:layout_marginTop="180dp"
        android:fontFamily="sans-serif-black"
        android:text="Stalls"
        android:textColor="#32620e"
        android:textSize="20sp" />

<!--card-view for breakfast meals-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginStart="25dp"
        android:layout_marginTop="450dp"
        android:fontFamily="sans-serif-black"
        android:text="Breakfast Meals"
        android:textColor="#32620e"
        android:textSize="20sp" />

</RelativeLayout>