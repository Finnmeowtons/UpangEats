<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordFragment">



    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="259dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="FORGOT PASSWORD"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="73dp"
            android:text="Enter your email to reset password."
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnSendForgotPassword"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="185dp"
            android:backgroundTint="#529B1C"
            android:text="Reset Password" />

        <androidx.cardview.widget.CardView
            android:layout_width="242dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="135dp"
            android:layout_marginBottom="30dp"
            android:background="#F2F9DB"
            app:cardBackgroundColor="#F2F9DB"
            >

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:ems="10"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="110dp"
            android:text="E-mail" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imgbtnBackForgotPassword"
        android:layout_width="157dp"
        android:layout_height="156dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="156dp"
        android:elevation="@dimen/cardview_default_elevation"
        android:src="@drawable/lock"
        app:layout_anchor="@style/CardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgbtnBackSetNewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        app:tint="#100F0F" />


</androidx.constraintlayout.widget.ConstraintLayout>
